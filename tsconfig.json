{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "types": ["vite/client", "node"],
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "NodeNext",
    "moduleResolution": "Node16",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "paths": {
      "@style/*": ["src/style/*"],
      "@plugins/*": ["src/plugins/*"],
      "@components/*": ["src/components/*"],
      "@libs/*": ["src/libs/*"],
      "@/*": ["src/*"]
    },
    "allowSyntheticDefaultImports": false
  },
  "include": ["auto-imports.d.ts", "**/*", "vite.config.js"]
}
